<md-dialog-content>
    <div class="md-dialog-content">
        <div ng-if="$ctrl.saving == true" class="text-center" style="overflow:hidden">
            <span class="icon-spinner animate-spin p-4 display-4"></span>
        </div>
        <form name="frmsesion" id="frmsesion" ng-if="$ctrl.saving == false">
            <fieldset>
                <div class="row">
                    <div class="col-md-12 form-group">
                        <md-input-container class="md-block mt-1 mb-1">
                            <label for="motivoCambio">Motivo:</label>
                            <md-select id="motivoCambio" name="motivoCambio" ng-model="$ctrl.motivo" required>
                                <md-option ng-value="9">Pospuesto pre aviso</md-option>
                                <md-option ng-value="10">Pospuesto en el día</md-option>
                                <md-option ng-value="12">Pospuesto sin Aviso</md-option>
                                <md-option ng-value="11">Pospuesto consultorio</md-option>
                            </md-select>
                        </md-input-container>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 form-group">
                        <md-calendar ng-model="$ctrl.selectedDate" required id="fecha" name="fecha" md-min-date="$ctrl.minDate"></md-calendar>
                    </div>
                </div>
            </fieldset>
        </form>

    </div>
</md-dialog-content>
<md-dialog-actions layout="row">
    <span flex></span>
    <md-button type="button" class="md-raised md-warn" ng-click="$ctrl.close()"><i class="icon-cancel"></i> Cerrar</md-button>
    <md-button type="submit" class="md-raised md-primary" ng-click="$ctrl.save()"><span class="icon-floppy"></span> Guardar</md-button>
</md-dialog-actions>

