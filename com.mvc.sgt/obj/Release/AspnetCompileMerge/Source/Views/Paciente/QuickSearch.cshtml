<div class="form-inline my-2 my-lg-0">
    <md-autocomplete class="mr-sm-2" ng-class="{'w-100':!($ctrl.addEnabled || $ctrl.viewEnabled || $ctrl.addQuick), 'w-50':($ctrl.addEnabled || $ctrl.viewEnabled || $ctrl.addQuick)}" md-selected-item="$ctrl.Paciente"
                     md-search-text="$ctrl.searchText"
                     md-items="item in $ctrl.search()"
                     md-item-text="item.Apellido + ' ' + item.Nombre"
                     md-selected-item-change="$ctrl.changeSelectedItem()"
                     md-min-length="3"
                     placeholder="Paciente">
        <md-item-template style="background-color:aquamarine">
            <span md-highlight-text="$ctrl.searchText" md-highlight-flags="^i" style="z-index:9999">{{item.Apellido + ' ' + item.Nombre}}</span>
        </md-item-template>
        <md-not-found style="z-index:9999">
            No se encontraron pacientes.
        </md-not-found>
    </md-autocomplete>

    <ng-transclude style="display:inline;" class="mr-1 ml-1" ng-click="$ctrl.clear()"> </ng-transclude>
    <button data-target="#ViewPaciente" @*data-toggle="modal"*@ class="btn btn-outline-light  my-2 my-sm-0"
            type="submit" ng-click="$ctrl.openViewPaciente();" ng-disabled="$ctrl.Paciente==null" ng-show="$ctrl.viewEnabled">
        <span class="icon-search"></span>
    </button>

    @*<md-button type="button" class="btn btn-outline-light  my-2 my-sm-0 ml-1" 
               data-target="#ViewPaciente" data-toggle="modal" ng-click="$ctrl.openCreate()" ng-show="$ctrl.addEnabled">
        <md-tooltip md-direction="Bottom">Nuevo Paciente</md-tooltip>
        <span class="icon-user-plus" style="font-size:1rem"></span>
    </md-button>*@

    <button data-target="#ViewPaciente" data-toggle="modal" class="btn btn-outline-light  my-2 my-sm-0 ml-1"
            type="submit" ng-click="$ctrl.openCreate()" ng-show="$ctrl.addEnabled" aria-label="Nuevo Paciente">
        <md-tooltip md-direction="Bottom" @*class="bg-light text-dark"*@ style="z-index: 99999!important" >Nuevo Paciente</md-tooltip>
        <span class="icon-user-plus "></span>
    </button>

    <button class="btn btn-outline-dark  my-2 my-sm-0 ml-1"
            type="submit" ng-show="$ctrl.addQuick" ng-click="$ctrl.openQuickCreate()">
        <span class="icon-user-plus "></span>
    </button>
</div>    
    <paciente-view paciente="$ctrl.Paciente" divid="ViewPaciente" ng-if="$ctrl.addEnabled || $ctrl.viewEnabled"></paciente-view>    
