<div id="CreateOrUpdate" class="modal fade bd-example-modal-lg" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header badge-primary">
                <h4 class="modal-title text-capitalize"><span class="icon-hospital"></span>
                    {{$ctrl.profesional.Nombre + ' ' + $ctrl.profesional.Apellido}}</h4>
                <pre>
                    {{$ctrl.profesional.Agenda[0].HoraDesde}}
                </pre>
                <button type="button" class="close" data-dismiss="modal" ng-click="$ctrl.close()">&times;</button>
            </div>
            <div class="modal-body">
                <form name="frmprofesional" id="frmprofesional">
                    <input type="hidden" class="form-control" ng-model="$ctrl.profesional.ID">
                    <fieldset>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <md-input-container class="md-block">
                                    <label for="Nombre">Nombre:</label>
                                    <input type="text" class="form-control" id="Nombre" name="nombre" ng-model="$ctrl.profesional.Nombre" maxlength="50" required>
                                    <div ng-show="frmprofesional.nombre.$touched" ng-messages="frmprofesional.nombre.$error" role="alert">
                                        <span ng-messages-include="~/Home/FormElementError" class="ng-mesagges"></span>
                                    </div>
                                </md-input-container>
                            </div>
                            <div class="col-md-6 form-group">
                                <md-input-container class="md-block">
                                    <label for="Apellido">Apellido</label>
                                    <input type="text" id="Apellido" name="apellido" ng-model="$ctrl.profesional.Apellido" required maxlength="50">
                                    <div ng-show="frmprofesional.apellido.$touched" ng-messages="frmprofesional.apellido.$error" role="alert">
                                        <span ng-messages-include="~/Home/FormElementError" class="ng-mesagges"></span>
                                    </div>
                                </md-input-container>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 form-group">
                                <md-input-container class="md-block">
                                    <md-checkbox ng-repeat="tipo in $ctrl.Tipos" ng-click="$ctrl.AddOrDelete(tipo.Value)"
                                                 ng-model="$ctrl.checkBoxTipos[tipo.Value]" aria-label="{{tipo.Text}}">
                                        {{tipo.Text}}
                                    </md-checkbox>
                                </md-input-container>
                            </div>
                        </div>       
                        
                        <div class="row">
                            <div class="col-md12 form-group">
                                <md-input-container class="md-block">
                                    <md-checkbox ng-model="$ctrl.profesional.Agenda[0].AtiendeLunes" aria-label="Lunes">
                                        Lunes
                                    </md-checkbox>
                                    <md-checkbox ng-model="$ctrl.profesional.Agenda[0].AtiendeMartes" aria-label="Martes">
                                        Martes
                                    </md-checkbox>
                                    <md-checkbox ng-model="$ctrl.profesional.Agenda[0].AtiendeMiercoles" aria-label="Miercoles">
                                        Miercoles
                                    </md-checkbox>
                                    <md-checkbox ng-model="$ctrl.profesional.Agenda[0].AtiendeJueves" aria-label="Jueves">
                                        Jueves
                                    </md-checkbox>
                                    <md-checkbox ng-model="$ctrl.profesional.Agenda[0].AtiendeViernes" aria-label="Viernes">
                                        Viernes
                                    </md-checkbox>
                                    <md-checkbox ng-model="$ctrl.profesional.Agenda[0].AtiendeSabado" aria-label="Sabado">
                                        Sabado
                                    </md-checkbox>
                                    <md-checkbox ng-model="$ctrl.profesional.Agenda[0].AtiendeDomingo" aria-label="Domingo">
                                        Domingo
                                    </md-checkbox>
                                </md-input-container>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md6 form-group">
                                <md-input-container class="md-block">
                                    <label for="Desde">Desde:</label>
                                    <input type="time" class="form-control" id="Desde" name="desde" ng-model="$ctrl.profesional.Agenda[0].HoraDesde">
                                </md-input-container>
                            </div>

                            <div class="col-md6 form-group">
                                <md-input-container class="md-block">
                                    <label for="Hasta">Hasta:</label>
                                    <input type="time" class="form-control" id="Hasta" name="hasta" ng-model="$ctrl.profesional.Agenda[0].HoraHasta">
                                </md-input-container>
                            </div>
                        </div>


