@model com.mvc.sgt.Models.AgendaRecesoModel

<div id="CreateOrUpdateReceso" class="modal fade bd-example-modal-lg" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header badge-primary">
                <h4 class="modal-title text-capitalize"><span class="icon-calendar-empty badge-primary"></span> Receso</h4>
                <button type="button" ng-click="close()" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body p-0">
                <input type="hidden" class="form-control" ng-model="$ctrl.feriado.ID">
                <div ng-cloak>
                    <md-content>
                        <div class="container-fluid p-1">
                            <form name="frmReceso" id="frmReceso" ng-cloak novalidate>
                                <fieldset>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <md-input-container class="form-group md-block">
                                                <label for="fechaDesde">
                                                    Fecha Desde:
                                                </label>
                                                <md-datepicker ng-model="$ctrl.receso.FechaDesde" required id="fechaDesde" name="fechaDesde" md-open-on-focus></md-datepicker>
                                                <span ng-show="frmReceso.fechaDesde.$touched" ng-messages="frmReceso.fechaDesde.$error" role="alert">
                                                    <span ng-messages-include="~/Home/FormElementError"></span>
                                                </span>
                                            </md-input-container>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <md-input-container class="form-group md-block">
                                                <label for="fechaHasta">
                                                    Fecha Hasta:
                                                </label>
                                                <md-datepicker ng-model="$ctrl.receso.FechaHasta" required id="fechaHasta" name="fechaHasta" md-open-on-focus></md-datepicker>
                                                <span ng-show="frmReceso.fechaHasta.$touched" ng-messages="frmReceso.fechaHasta.$error" role="alert">
                                                    <span ng-messages-include="~/Home/FormElementError"></span>
                                                </span>
                                            </md-input-container>
                                        </div>                                       
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-12">
                                            <md-input-container class="form-group md-block">
                                                @Html.LabelFor(x => x.Observaciones)
                                                <input type="text" value="" class="form-control text-capitalize" name="observaciones" ng-model="$ctrl.receso.Observaciones" autocomplete="off" />
                                                <div ng-show="frmReceso.observaciones.$touched" ng-messages="frmReceso.observaciones.$error" role="alert">
                                                    <span ng-messages-include="~/Home/FormElementError" class="ng-mesagges"></span>
                                                </div>
                                            </md-input-container>
                                        </div>                                        
                                    </div>
                                </fieldset>
                                <div class="clearfix"></div>
                                <span ng-show="$ctrl.error.length>0" role="alert">{{$ctrl.error}}</span>
                            </form>
                        </div>
                    </md-content>
                </div>
            </div>
            <div class="modal-footer">
                <md-button type="button" class="md-raised md-warn" ng-click="$ctrl.close()" data-dismiss="modal"><i class="icon-cancel"></i> Cancelar</md-button>
                <md-button type="submit" class="md-raised md-primary" ng-click="$ctrl.save($ctrl.receso)"><span class="icon-floppy"></span> Guardar</md-button>
            </div>
        </div>
    </div>
</div>



