@model com.mvc.sgt.Models.FeriadoModel

<div id="CreateOrUpdate" class="modal fade bd-example-modal-lg" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header badge-primary">
                <h4 class="modal-title text-capitalize"><span class="icon-calendar-empty badge-primary"></span> {{$ctrl.feriado.Descripcion}}</h4>
                <button type="button" ng-click="close()" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body p-0">
                <input type="hidden" class="form-control" ng-model="$ctrl.feriado.ID">
                <div ng-cloak>
                    <md-content>
                        <div class="container-fluid p-0">
                            <form name="frmFeriado" id="frmFeriado" ng-cloak novalidate>
                                <fieldset>
                                    <div class="form-row">
                                        <div class="form-group col-md-5">
                                            <md-input-container class="form-group md-block">
                                                @Html.LabelFor(x => x.Descripcion)
                                                <input type="text" value="" class="form-control text-capitalize" name = "descripcion", ng-model = "$ctrl.feriado.Descripcion" autocomplete = "off" required/>                                                
                                                <div ng-show="frmFeriado.descripcion.$touched" ng-messages="frmFeriado.descripcion.$error" role="alert">
                                                    <span ng-messages-include="~/Home/FormElementError" class="ng-mesagges"></span>
                                                </div>
                                            </md-input-container>
                                        </div>
                                        <div class="form-group col-md-4 col-lg-5">
                                            <md-input-container class="form-group md-block">                                                
                                                <label for="fecha">
                                                    Fecha:
                                                </label>

                                                <md-datepicker ng-model="$ctrl.feriado.Fecha" required id="fecha" name="fecha" md-open-on-focus></md-datepicker>
                                                <span ng-show="frmFeriado.fecha.$touched" ng-messages="frmFeriado.fecha.$error" role="alert">
                                                    <span ng-messages-include="~/Home/FormElementError"></span>
                                                </span>
                                            </md-input-container>
                                        </div>
                                    </div>
                                </fieldset>
                                <div class="clearfix"></div>
                                <span ng-show="$ctrl.error.length>0" role="alert">{{$ctrl.error}}</span>
                            </form>
                        </div>
                    </md-content>
                </div>
            </div>
            <div class="modal-footer">
                <md-button type="button" class="md-raised md-warn" ng-click="$ctrl.close()" data-dismiss="modal"><i class="icon-cancel"></i> Cancelar</md-button>
                <md-button type="submit" class="md-raised md-primary" ng-click="$ctrl.save($ctrl.feriado)"><span class="icon-floppy"></span> Guardar</md-button>
            </div>
        </div>
    </div>
</div>

