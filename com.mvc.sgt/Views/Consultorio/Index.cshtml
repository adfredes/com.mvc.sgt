
@*@{
    ViewBag.Title = "Consultorios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@

<div>

    <div class="panel panel-default">
        <div class="panel-body">
            <div ng-controller="consultorioController as ctr" ng-init="ctr.GetConsultorios()">
                <table class="table table-responsive-sm table-hover border">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col" class="w-50">Descripcion</th>
                            <th scope="col" class="text-center">Tipo</th>
                            <th scope="col" class="text-center">Turnos Simultaneos</th>
                            <th scope="col" class="text-center">Habilitado</th>
                            <th scope="col" class="text-center">Modificado</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tr ng-repeat="consultorio in ctr.consultorios">
                        <th scope="row">{{consultorio.ID}}</th>
                        <td>{{consultorio.Descripcion}}</td>
                        <td class="text-center">{{consultorio.TipoDeSesion}}</td>
                        <td class="text-center">{{consultorio.TurnosSimultaneos}}</td>
                        <td class="text-center">
                            <input type="checkbox" class="form-check-input" ng-model="consultorio.Habilitado" disabled />
                        </td>
                        <td class="text-center">{{consultorio.FechaModificacion.substr(6,13) | date: "dd/MM/yyyy HH:mm:ss"}}</td>
                        <td class="text-center align-middle">
                            <span class="icon-edit btn" data-target="#CreateOrUpdate" data-toggle="modal" ng-click="ctr.Edit(consultorio)"></span>
                        </td>
                    </tr>
                </table>

                <div class="form-group">
                    <md-button type="button" class="md-fab md-primary align-middle" data-target="#CreateOrUpdate" data-toggle="modal" ng-click="ctr.Create()">
                        <md-tooltip md-direction="right">Nuevo Consultorio</md-tooltip>
                        <span class="icon-briefcase"></span>
                    </md-button>
                </div>
                <consultorio-edit consultorio="ctr.consultorio"></consultorio-edit>                
            </div>

        </div>
    </div>
</div>



