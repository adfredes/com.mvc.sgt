<div id="CreateOrUpdate" class="modal fade bd-example-modal-lg" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Aseguradora</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>                
            </div>
            <div class="modal-body">
                <input type="hidden" class="form-control" ng-model="aseguradora.ID">
                <div class="form-group">
                    <label for="Descripcion">Descripcion:</label>
                    <input type="text" class="form-control" id="Descripcion" ng-model="aseguradora.Descripcion" maxlength="50">
                </div>
                <div class="form-group">
                    <label for="Descripcion">Color:</label>
                    <input type="color" class="form-control" style="padding: 0px;" id="Color" ng-model="aseguradora.Color" value="{{aseguradora.Color}}">
                </div>
                <div class="form-group">
                    <label>Plan
                        <input type="text" ng-model="planModel.Descripcion" />
                    </label>
                    <button ng-click="AgregarPlan()" class="btn-secondary">Agregar</button>
                </div>
                
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th scope="colgroup">*</th>
                                <th scope="col" ng-show="true==false">
                                    Id
                                </th>
                                <th scope="col">
                                    Plan
                                </th>
                                <th scope="col">
                                    Habilitado
                                </th>
                                <th>
                                    Modificado
                                </th>                                    
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="(index, plan) in aseguradora.AseguradoraPlan track by index">
                                <th scope="row">
                                    {{index+1}}
                                </th>
                                <td ng-show="true==false">
                                    {{plan.ID}}
                                </td>
                                <td>
                                    {{plan.Descripcion}}
                                </td>
                                <td>
                                    <input type="checkbox" class="form-check" disabled ng-model="plan.Habilitado" />
                                </td>
                                <td>
                                    {{plan.FechaModificacion.substr(6,13) | date: "MM/dd/yyyy HH:mm:ss"}}
                                </td>
                                <td>
                                    <button class="btn btn-secondary">Editar</button>
                                    <button class="btn btn-danger" ng-click="EliminarPlan(plan, index)">Eliminar</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close"></i> Close</button>
                <button type="submit" class="btn btn-success" ng-click="save()"><i class="fa fa-save"></i> Submit</button>
            </div>
        </div>
    </div>
</div>


